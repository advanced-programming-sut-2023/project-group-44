<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.Main"
            prefHeight="500.0" prefWidth="700.0"
            stylesheets="@../css/style.css">
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="STRONGHOLD" id="strongHoldLabel" fx:id="strongHoldLabel">
                <font>
                    <Font name="System Bold" size="40.0" />
                </font>
            </Label>
            <VBox alignment="CENTER" spacing="5">
                <TextField promptText="username" styleClass="text-input" fx:id="username"/>
                <Label text="" styleClass="label-small" id="usernameLabel" fx:id="usernameLabel"/>
                <PasswordField promptText="password" fx:id="password"/>
                <Label text="" styleClass="label-small" id="passwordLabel" fx:id="passwordLabel"/>
                <HBox alignment="CENTER" spacing="5">
                <Button text="show password" />
                <Button text="random password" />
                </HBox>
                <TextField promptText="nickname" styleClass="nickname" fx:id="nickname"/>
                <TextField promptText="email" styleClass="text-input" fx:id="email"/>

            </VBox>
        </VBox>
    </center>

</BorderPane>
